<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <arg name="basepath" value="."/>
    <arg name="extensions" value="php,phtml"/>
    <arg name="colors"/>

    <!-- Show progress of the run and sniff codes -->
    <arg value="p"/>
    <arg value="s"/>

    <rule ref="Magento2">
        <exclude name="Magento2.Legacy.Copyright.FoundCopyrightMissingOrWrongFormat"/>
        <exclude name="Magento2.Legacy.CopyrightAnotherExtensionsFiles.FoundCopyrightMissingOrWrongFormat"/>
        <exclude name="Magento2.Functions.DiscouragedFunction.Discouraged"/>
    </rule>

    <file>app/code</file>
</ruleset>
