#!/usr/bin/env bash

# Sets file permissions according to Magento specifications.

cd "$( dirname "${BASH_SOURCE[0]}" )"
cd ..

source env/php.env

./bin/cli bash -c "find ${MAGENTO_ROOT}/pub -type f -exec chmod 664 {} \;;
    find ${MAGENTO_ROOT}/pub -type d -exec chmod 775 {} \;;
    find ${MAGENTO_ROOT}/generated -type d -exec chmod g+s {} \;;
    find ${MAGENTO_ROOT}/var/composer_home -type f -exec chmod 664 {} \;"
