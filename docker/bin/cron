#!/usr/bin/env bash

# Starts or stops the cron service.
#
# To start the service: "bin/cron start"
# To stop the service: "bin/cron stop"

cd "$( dirname "${BASH_SOURCE[0]}" )"
cd ..

if [[ "$1" != "start" && "$1" != "stop" ]]; then
    echo "Please run this script with \"start\" or \"stop\"."
    exit 1
fi

#if [ "$1" = "start" ]; then
#    docker-compose exec fpm sudo -u www-data bin/magento cron:install -f
#fi

docker-compose exec cron service cron $1
